{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}

    <div id="myCarouselMain" class="carousel slide carousel-fade" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <div class="mask flex-center">
                    <div class="container">
                        <div class="row align-items-center">
                            <div class="col-md-7 col-12 order-md-1 order-2">
                                {% for destination in destinations %}
                                <h4>
                                    <a href="{{ path('destination_detail', {id: destination.id}) }}">{{ destination.name }}</a>
                                </h4>
                                <p>{{ destination.country }}</p> <br> <a
                                        href="{{ path('destination_detail',{'id': destination.id}) }}">Détail</a>

                            </div>
                            <div class="col-md-5 col-12 order-md-2 order-1"><img
                                        src="images/destinations/{{ destination.filename }}" class="mx-auto"
                                        alt="slide"></div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <a class="carousel-control-prev" href="#myCarouselMain" role="button" data-slide="prev"> <span
                    class="carousel-control-prev-icon" aria-hidden="true"></span> <span class="sr-only">Previous</span>
        </a> <a class="carousel-control-next" href="#myCarouselMain" role="button" data-slide="next"> <span
                    class="carousel-control-next-icon" aria-hidden="true"></span> <span class="sr-only">Suivant</span>
        </a>
    </div>

    <div class="row">
        <div class="col-md-12">
            <h2>destination <b>les plus visités</b></h2>
            <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="0">
                <!-- Carousel indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                </ol>
                <!-- Wrapper for carousel items -->
                <div class="carousel-inner">
                    <div class="item active">
                        <div class="row">
                            {% for destination in destinations %}
                                <div class="col-sm-3">
                                    <div class="thumb-wrapper">
                                        <div class="img-box">

                                            {% if destination.filename %}
                                                <a href="{{ path('destination_detail', {id: destination.id}) }}"> <img
                                                            src="images/destinations/{{ destination.filename }}"
                                                            class="img-responsive" alt="img"></a>
                                            {% else %}
                                                <a href="{{ path('destination_detail', {id: destination.id}) }}"><img
                                                            src="{{ '/images/empty.png' }}" class="img-responsive"
                                                            alt="img"></a>
                                            {% endif %}

                                        </div>
                                        <div class="thumb-content">
                                            <h4><a style="color:#333;"
                                                   href="{{ path('destination_detail', {id: destination.id}) }}">{{ destination.name }}</a>
                                            </h4>
                                            <p class="item-price">{{ destination.country }}
                                                <span> {{ destination.type }}  </span></p>
                                            <div class="star-rating">
                                                <ul class="list-inline">
                                                    <li class="list-inline-item"><i class="fa fa-star"></i></li>
                                                    <li class="list-inline-item"><i class="fa fa-star"></i></li>
                                                    <li class="list-inline-item"><i class="fa fa-star"></i></li>
                                                    <li class="list-inline-item"><i class="fa fa-star"></i></li>
                                                    <li class="list-inline-item"><i class="fa fa-star-o"></i></li>
                                                </ul>
                                            </div>
                                            <a href="{{ path('destination_detail',{'id': destination.id}) }}"
                                               class="add-to-cart btn btn-default">Détail</a>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
                <!-- Carousel controls -->
                <a class="carousel-control left" href="#myCarousel" data-slide="prev">
                    <i class="fa fa-angle-left"></i>
                </a>
                <a class="carousel-control right" href="#myCarousel" data-slide="next">
                    <i class="fa fa-angle-right"></i>
                </a>
            </div>
        </div>
    </div>

{% endblock %}
